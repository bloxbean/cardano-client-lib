<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <!-- Console Appender -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <!-- File Appender for General Info -->
    <appender name="fileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="groovy-dsl-integration.log"/>
        <param name="Append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <!-- File Appender for Errors -->
    <appender name="errorFileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="groovy-dsl-error.log"/>
        <param name="Append" value="false"/>
        <param name="Threshold" value="WARN"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <!-- Logger for Groovy DSL Integration Tests -->
    <logger name="com.bloxbean.cardano.client.dsl.groovy" level="DEBUG" additivity="false">
        <appender-ref ref="console"/>
        <appender-ref ref="fileAppender"/>
        <appender-ref ref="errorFileAppender"/>
    </logger>

    <!-- Logger for Cardano Client Library -->
    <logger name="com.bloxbean.cardano.client" level="INFO" additivity="false">
        <appender-ref ref="console"/>
        <appender-ref ref="fileAppender"/>
        <appender-ref ref="errorFileAppender"/>
    </logger>

    <!-- Logger for Backend Services -->
    <logger name="com.bloxbean.cardano.client.backend" level="DEBUG" additivity="false">
        <appender-ref ref="console"/>
        <appender-ref ref="fileAppender"/>
        <appender-ref ref="errorFileAppender"/>
    </logger>

    <!-- Logger for QuickTx -->
    <logger name="com.bloxbean.cardano.client.quicktx" level="DEBUG" additivity="false">
        <appender-ref ref="console"/>
        <appender-ref ref="fileAppender"/>
        <appender-ref ref="errorFileAppender"/>
    </logger>

    <!-- Reduce noise from HTTP clients -->
    <logger name="org.apache.http" level="WARN"/>
    <logger name="groovyx.net.http" level="WARN"/>
    <logger name="org.apache.commons.httpclient" level="WARN"/>

    <!-- Reduce noise from Jackson -->
    <logger name="com.fasterxml.jackson" level="WARN"/>

    <!-- Root Logger -->
    <root>
        <priority value="INFO"/>
        <appender-ref ref="console"/>
        <appender-ref ref="fileAppender"/>
        <appender-ref ref="errorFileAppender"/>
    </root>

</log4j:configuration>